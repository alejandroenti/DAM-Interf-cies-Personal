<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.ControllerMobileItem">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox fx:id="windowBackground" alignment="CENTER_LEFT" maxHeight="50.0" minHeight="50.0" style="-fx-background-color: rgb(100,200,200);" VBox.vgrow="NEVER">
               <children>
                  <VBox alignment="CENTER" prefHeight="50.0" prefWidth="70.0">
                     <children>
                        <ImageView fx:id="imgArrowBack" fitHeight="25.0" fitWidth="25.0" onMouseClicked="#toViewItems" pickOnBounds="true" preserveRatio="true" VBox.vgrow="NEVER">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </ImageView>
                     </children>
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                  </VBox>
                  <Label fx:id="windowTitle" maxHeight="50.0" text="Personatges" translateX="30.0" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <Circle fx:id="itemCircle" fill="DODGERBLUE" radius="17.0" stroke="BLACK" strokeType="INSIDE">
                     <HBox.margin>
                        <Insets left="48.0" />
                     </HBox.margin>
                  </Circle>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="itemImage" fitHeight="202.0" fitWidth="285.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="218.0" prefWidth="400.0">
               <children>
                  <Label fx:id="itemDescription" alignment="CENTER" contentDisplay="CENTER" prefHeight="145.0" prefWidth="400.0" text="Label" textAlignment="CENTER" wrapText="true" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
